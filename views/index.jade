extends layout

block content
  div.container
    div.row
      h1.text-center Visual Smith
      hr
      div.col-md-8
        form(method='POST' action='/save')
          div.form-group
            input.form-control(name='name' placeholder='Document Title')
          div.form-group
            textarea.form-control(name='content' rows='15' placeholder='Write away!')
          div.form-group
            input.form-control(name='file' placeholder='file name please...')
          div.form-group
            label(for='type') Data Type:
            select.form-control(name='type')
              option(value='bar') Bar Graph
              option(value='fce') Force Directed Graph
          input(type='submit' class='btn btn-default' value='SAVE')
      div.col-md-4
        h2 Saved Documents
        - each file in files
          p= file
            a(href='/view/#{file}' class='btn btn-default') Open
            a(href='/edit/#{file}' class='btn btn-warning') Edit